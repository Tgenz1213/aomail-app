{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "baseUrl": "./",
        "moduleResolution": "node",
        "paths": {
            "@/*": ["src/*"]
        },
        "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
        "strict": true,
        "jsx": "preserve",
        "importHelpers": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "allowJs": true,
        "checkJs": true,
        "resolveJsonModule": true
    },
    "include": ["src/**/*", "src/shims-png.d.ts"],
    "exclude": ["node_modules"]
}
